                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true">

                            <TextView
                                android:id="@+id/taste_rate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="口味:8.4" />

                            <TextView
                                android:id="@+id/env_rate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="服务:8.9" />

                            <TextView
