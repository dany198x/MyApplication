                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="环境:8.9" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true">

                            <TextView
                                android:id="@+id/food_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="粤菜馆" />

                            <TextView
